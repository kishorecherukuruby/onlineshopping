<%= form_for @product do |f|%>
	<p>Name : <%= f.text_field :name %></p>
	<p>Price : <%= f.text_field :price %></p>
	<p>Quantity : <%= f.text_field :quantity %></p>
	<p><%= f.select("category_id", Category.all.collect {|p| [ p.name, p.id ] }, { include_blank: true })	%></p>
	<p><%= f.submit %></p>
<% end %>